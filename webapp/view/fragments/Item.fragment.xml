<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:f="sap.ui.layout.form"
    xmlns:u="sap.ui.unified"
    xmlns:layout="sap.ui.layout"
    xmlns:table="sap.ui.table"
    xmlns:uxap="sap.uxap"
    height="100%">
    <VBox>
    <table:Table id="itemTable" rows="{itemModel>/}">
            <table:extension>
                <OverflowToolbar >
                    <ToolbarSpacer />
                    <Button text="생성" press="onCreate" type="Emphasized"/>
                    <Button text="삭제" press="onDelete" />
                </OverflowToolbar>
            </table:extension>
            <table:rowActionTemplate>
                <table:RowAction>
                    <table:RowActionItem type="Navigation" press="onMove"></table:RowActionItem>
                </table:RowAction>
            </table:rowActionTemplate>
            <table:columns>
                <table:Column >
                    <Text text="구분" />
                    <table:template>
                        <Select
                        width="100%"
                        forceSelection="false"
                        selectedKey="{itemModel>Gubun}"
                        items="{ 
                            path: 'selectModel>/'
                        }">
                        <core:Item key="{selectModel>key}" text="{selectModel>text}" />
                        </Select>
                    </table:template>
                </table:Column>
                <table:Column >
                    <Text text="제목" />
                    <table:template>
                        <Input value="{itemModel>Title}" />
                    </table:template>
                </table:Column>
                <table:Column >
                    <Text text="내용" />
                    <table:template>
                        <Input value="{itemModel>Content}" />
                    </table:template>
                </table:Column>
                <table:Column >
                    <Text text="금액" />
                    <table:template>
                        <Input value="{itemModel>Amount}" />
                    </table:template>
                </table:Column>
                <!-- <table:Column >
                    <Text text="화폐단위" />
                    <table:template>
                        <Input value="{itemModel>Unit}" 
                               showValueHelp="true"
				               valueHelpRequest="handleValueHelp"/>
                    </table:template>
                </table:Column> -->
            </table:columns>
        </table:Table>
    </VBox>
</core:FragmentDefinition>